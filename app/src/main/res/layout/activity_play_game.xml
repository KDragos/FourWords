<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_play_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kristindragos.fourwords.PlayGameActivity"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:text="Time Remaining:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_time_remaining_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textAlignment="textEnd" />

        <TextView
            android:text="3:00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_timer"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row1"
        android:layout_weight="0.00">

        <Button
            android:text="B"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:elevation="2dp"
            android:id="@+id/btn_gamecube1_1"
            android:layout_height="75dp"
            android:textSize="30sp"
            android:onClick="addToWord" />

        <Button
            android:text="B"
            android:layout_width="wrap_content"
            android:id="@+id/btn_gamecube2_1"
            android:layout_weight="1"
            android:elevation="2dp"
            android:layout_height="75dp"
            android:textSize="30sp"
            android:onClick="addToWord" />
        <Button
            android:text="B"
            android:layout_width="wrap_content"
            android:id="@+id/btn_gamecube3_1"
            android:layout_weight="1"
            android:elevation="2dp"
            android:layout_height="75dp"
            android:textSize="30sp"
            android:onClick="addToWord" />

        <Button
            android:text="B"
            android:layout_width="wrap_content"
            android:id="@+id/btn_gamecube4_1"
            android:layout_weight="1"
            android:elevation="2dp"
            android:layout_height="75dp"
            android:textSize="30sp"
            android:onClick="addToWord" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row2">

        <Button
            android:text="B"
            android:layout_width="wrap_content"
            android:id="@+id/btn_gamecube1_2"
            android:layout_weight="1"
            android:elevation="2dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:onClick="addToWord" />
        <Button
            android:text="B"
            android:layout_width="wrap_content"
            android:id="@+id/btn_gamecube2_2"
            android:layout_weight="1"
            android:elevation="2dp"
            android:layout_height="75dp"
            android:textSize="30sp"
            android:onClick="addToWord" />
        <Button
            android:text="B"
            android:layout_width="wrap_content"
            android:id="@+id/btn_gamecube3_2"
            android:layout_weight="1"
            android:elevation="2dp"
            android:layout_height="75dp"
            android:textSize="30sp"
            android:onClick="addToWord" />
        <Button
            android:text="B"
            android:layout_width="wrap_content"
            android:id="@+id/btn_gamecube4_2"
            android:layout_weight="1"
            android:elevation="2dp"
            android:layout_height="75dp"
            android:textSize="30sp"
            android:onClick="addToWord" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row3">

        <Button
            android:text="B"
            android:layout_width="wrap_content"
            android:id="@+id/btn_gamecube1_3"
            android:layout_weight="1"
            android:elevation="2dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:onClick="addToWord" />

        <Button
            android:text="B"
            android:layout_width="wrap_content"
            android:id="@+id/btn_gamecube2_3"
            android:layout_weight="1"
            android:layout_height="75dp"
            android:elevation="2dp"
            android:textSize="30sp"
            android:onClick="addToWord" />
        <Button
            android:text="B"
            android:layout_width="wrap_content"
            android:id="@+id/btn_gamecube3_3"
            android:layout_weight="1"
            android:elevation="2dp"
            android:layout_height="75dp"
            android:textSize="30sp"
            android:onClick="addToWord" />
        <Button
            android:text="B"
            android:layout_width="wrap_content"
            android:id="@+id/btn_gamecube4_3"
            android:layout_weight="1"
            android:layout_height="75dp"
            android:elevation="2dp"
            android:textSize="30sp"
            android:onClick="addToWord" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row4">

        <Button
            android:text="B"
            android:layout_width="wrap_content"
            android:id="@+id/btn_gamecube1_4"
            android:layout_weight="1"
            android:elevation="2dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:onClick="addToWord" />

        <Button
            android:text="B"
            android:layout_width="wrap_content"
            android:id="@+id/btn_gamecube2_4"
            android:layout_weight="1"
            android:elevation="2dp"
            android:layout_height="75dp"
            android:textSize="30sp"
            android:onClick="addToWord" />
        <Button
            android:text="B"
            android:layout_width="wrap_content"
            android:id="@+id/btn_gamecube3_4"
            android:layout_weight="1"
            android:elevation="2dp"
            android:layout_height="75dp"
            android:textSize="30sp"
            android:onClick="addToWord" />
        <Button
            android:text="B"
            android:layout_width="wrap_content"
            android:id="@+id/btn_gamecube4_4"
            android:layout_weight="1"
            android:layout_height="75dp"
            android:elevation="2dp"
            android:textSize="30sp"
            android:onClick="addToWord" />
    </LinearLayout>

    <TextView
        android:text="WordToPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:id="@+id/txt_current_word"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:autoText="false"
        android:layout_weight="0.10"
        android:textAlignment="center"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <Button
            android:text="Clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_clear"
            android:layout_weight="1"
            android:elevation="2dp"
            android:onClick="clearWord" />

        <Button
            android:text="Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_score"
            android:layout_weight="1"
            android:elevation="2dp"
            android:onClick="scoreWord" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/lv_previous_words"
            style="@style/Widget.AppCompat.ListView"
            android:layout_height="match_parent"
            android:transcriptMode="alwaysScroll"
            android:stackFromBottom="true" />
    </RelativeLayout>

</LinearLayout>
